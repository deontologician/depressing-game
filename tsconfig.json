{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "es6",
    "sourceMap": false,
    "outDir": "build",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },

  "files": [
    "depressing_game.ts",
    "third-party/maquette.ts",
  ],
}
